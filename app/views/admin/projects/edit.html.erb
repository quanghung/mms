<h1 class="offset1 pull-left">Edit Project</h1>

<div class="row">
    <div class="span6 offset1">
      <%= form_for [:admin, @project] do |f| %>
      <%= render "shared/flash_messages" %>
      <%= f.label :name %>
      <%= f.text_field :name %>
        
      <%= f.label :'Short Name' %>
      <%= f.text_field :short_name %>

      <%= f.label :'Start date' %>
      <%= f.text_field :start_date %>
        
      <%= f.label :'End date' %>
      <%= f.text_field :end_date %>

      <%= f.label :'Team id' %>
	  <%= f.collection_select :team_id, Team.all, :id , :id %>

      <%= f.submit "Edit Project",class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
</div>