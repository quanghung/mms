<h1 class="offset1 pull-left">Add Project</h1>

<div class="row">
    <div class="span6 offset1">
      <%= form_for [:admin, @project] do |f| %>
      <%= render "shared/flash_messages" %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :'Short Name' %>
      <%= f.text_field :short_name %>

      <%= f.label :'Start date' %>
      <%= f.date_field :start_date %>
        
      <%= f.label :'End date' %>
      <%= f.date_field :end_date %>

      <%= f.label :'Team id' %>
	    <%= f.collection_select :team_id, Team.all, :id , :name, 
	  		include_blank: 'Please select a team'%>
      <%= f.submit "Add project",class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
</div>